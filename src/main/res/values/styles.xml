<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ControlButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ControlToggleButton" parent="ControlButton">
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="AdControl">
        <item name="android:layout_width">@dimen/ad_controls_width</item>
        <item name="android:layout_height">@dimen/ad_controls_height</item>
        <item name="android:background">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AdControlProgressBar" parent="AdControl"/>

    <style name="AdControlButton" parent="AdControl">
        <item name="android:scaleType">center</item>
        <item name="mainColor">@color/default_main_color</item>
        <item name="accentColor">@color/default_ad_accent_color</item>
    </style>

    <style name="TracksDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>
</resources>
